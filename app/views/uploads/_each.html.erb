<div>
	<div>
		<%= link_to rails_blob_path(upload, disposition: 'preview'), target: 'blank' do %>
		<i class="fas fa-file-alt xl-icon file mb-2" title="<%= upload.filename %>"></i>
		<span><%= upload.filename %></span>
		<% end %>
	</div>
</div>

<div class="col-md-6">
	<% if @root_folder.owner_id == current_user.id %>

	<%= link_to folder_upload_path(@root_folder, upload.id), remote: true, data: {confirm: 'Do you want to remove the folder?'} do %>
	<i class="zoom fas fa-share-alt xs-icon pr-2 float-left share" title="<%= upload.filename %>" data-toggle="modal" data-target="#share_modal"></i>
	<% end %>

	<%= link_to folder_upload_path(@root_folder, upload.id), remote: true, data: {confirm: 'Do you want to remove the file?'}, method: :delete do %>
	<i class="fas fa-trash-alt xs-icon  float-left delete" title="<%= upload.filename %>"></i>
	<% end %>
	<% end %>
</div>